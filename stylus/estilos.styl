@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o mz moz 
//animacion(parametro)
	//-webkit-animation 1s state infinite
	//-moz-animation 1s state infinite
	//-o-animation 1s state infinite
	//-ms-animation 1s state infinite
	//animacion parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris= #F0F0F0
a
	text-decoration none
	
body
	font-family: 'Varela Round', sans-serif;
	font-size 16px

figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
.buttom-menu
	color gris_oscuro
	left .5em
	margin-top -8px
	position absolute
	top 50%
		
.container
	font-size 0
	padding 1.4rem
	text-align center

.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_oscuro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, .3)

.border-bottom
	border-bottom 1px solid gris_claro

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative

.autor
	color gris_claro

.cente-block
	margin 0 auto

.center-text
	text-align center
.right-text
	text-align right
.wrap
	width 1000px
.padding
	padding 1em

.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.round
	border-radius 50%
	overflow hidden
	
.progress
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto

	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
		animation 10s state infinite

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite  linear
		
@keyframes state
	0%
		width 0
	100%
		width 100%
			
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
		
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
		
.playing
	&.small
		width 20em
		margin 0 auto

.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em

.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 17px
	
.playlist
	display none
.logo
	display none
@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			ma
			rgin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width: 1000px)
	body
		background gris
	.buttom-menu
		display none
	.playing
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
			padding-top 1.3em
	.menu
		background gris
		display block
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none

	.playlist
		display block
		width 25em
		padding 0 2em
		border-left 1px solid gris_claro
		.list
			list-style none
		.item
			padding 1em 0
		.action
			font-size .8em
		
	.header
		height auto
		border none
		.title
			display none
	.isotipo
		width 122px
	.logo
		display block
		background white
		padding 1.3em 0
		overflow hidden
	
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 10px solid gris_claro
			content ""
			display inline-block
			margin-left .4em